# Configurações de Produção - RENUM API
# Copie este arquivo para .env.production e preencha os valores

# Ambiente
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# URLs
FRONTEND_URL=https://renum.yourdomain.com
API_BASE_URL=https://api.renum.yourdomain.com

# Supabase (Produção)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Suna Backend Integration
SUNA_BASE_URL=https://suna-api.yourdomain.com
SUNA_API_KEY=your_suna_api_key_here
SUNA_TIMEOUT=30

# Security
JWT_SECRET_KEY=your_super_secret_jwt_key_here_min_32_chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS
ALLOWED_ORIGINS=https://renum.yourdomain.com,https://www.renum.yourdomain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Redis (para cache e sessões)
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=your_redis_password_here

# Monitoring
SENTRY_DSN=https://your-sentry-dsn-here
ENABLE_METRICS=true
METRICS_PORT=9090

# Health Checks
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_INTERVAL=30